<audio id="nz-audio" class="video-js vjs-default-skin" 
       preload="auto" style="width:100%; height: 100px;" width="auto" height="auto"
       >
    {#<source src="{{options.src}}" type='{{options.type}}'>#}
</audio>

<script>
    var player = videojs("nz-audio",
            {
                controls: true,
                autoplay: true,
                loop: false,
                width: '100%',
                height: 100,
                poster: "{{options.poster}}",
                plugins: {
                    wavesurfer: {
                        src: "{{options.src}}",
                        msDisplayMax: 10,
                        waveColor: "grey",
                        progressColor: "black",
                        cursorColor: "black",
                        hideScrollbar: true
                    }
                }
            });
</script>